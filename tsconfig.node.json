{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@css/": ["./src/styles/*"],
      "@scss/": ["./src/styles_scss/*"],
      "@font/": ["./src/font/*"],
      "@jsx/": ["./src/jsx_script/*"],
      "@tsx/": ["./src/tsx_script/*"],
      "@img/": ["./src/imgs/*"],
    },
  },
  "include": ["vite.config.ts"]
}
