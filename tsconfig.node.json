{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sty/": ["./src/styles/*"],
      "@jsx/": ["./src/jsx_script/*"],
      "@components": ["./components/*"],
      "@hooks": ["./hooks"]
    },
  },
  "include": ["vite.config.ts"]
}
